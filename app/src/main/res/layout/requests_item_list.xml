<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="@android:color/white"
        card_view:cardCornerRadius="5dp"
        card_view:elevation="0dp"
        card_view:cardUseCompatPadding="true">



        <LinearLayout
            android:padding="8dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.scoutlabour.custom.NormalTextView
                        android:id="@+id/txtRequestNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="RequestNo"
                        android:textAllCaps="false"
                        android:textColor="#000"
                        android:textSize="18sp"
                        android:textStyle="normal" />
                    <LinearLayout
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                         <com.scoutlabour.custom.NormalTextView
                            android:id="@+id/txtCategoryName"
                            android:textSize="14sp"
                            android:layout_gravity="center"
                            android:textColor="#000000"
                            android:textAllCaps="false"
                            android:text="Category"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <ImageView
                            android:layout_margin="1dp"
                            android:padding="2dp"
                            android:src="@drawable/arrow_right_black"
                            android:layout_width="18dp"
                            android:layout_height="18dp" />
                         <com.scoutlabour.custom.NormalTextView
                            android:id="@+id/txtSubCategoryName"
                            android:textSize="14sp"
                            android:layout_gravity="center"
                            android:textColor="#000000"
                            android:textAllCaps="false"
                            android:text="SubCategory"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
             <com.scoutlabour.custom.NormalTextView
                android:id="@+id/txtProblemExp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Problem explaination"
                android:textAllCaps="false"
                android:textColor="#000"
                android:textSize="14sp" />
            <LinearLayout
                android:id="@+id/llJobDone"
                android:layout_marginTop="3dp"
                android:background="@color/colorPrimary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
                <TextView
                    android:layout_margin="5dp"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Job Done"/>
            </LinearLayout>
        </LinearLayout>



    </android.support.v7.widget.CardView>

</LinearLayout>
