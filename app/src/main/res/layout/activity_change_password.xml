<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@color/bg_lightgray"
    tools:context="com.scoutlabour.activities.ChangePasswordActivity">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include layout="@layout/app_bar"/>
        <ScrollView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="vertical">





                    <com.scoutlabour.custom.NormalEditTextView
                        android:id="@+id/etOldPassword"
                        android:background="@drawable/border_gray_top"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="@dimen/edt_padding_bottom_12dp"
                        android:paddingTop="@dimen/edt_padding_top_12dp"
                        android:paddingLeft="@dimen/edt_padding_left_10dp"
                        android:paddingRight="@dimen/edt_padding_right_10dp"
                        android:gravity="left"
                        android:hint="Old Password"
                        android:inputType="textPassword"
                        android:maxLines="1"
                        android:minLines="1"
                        android:textColor="#000"
                        android:textColorHint="#9C9C9C"
                        android:textSize="16sp" />

                    <com.scoutlabour.custom.NormalEditTextView
                        android:id="@+id/etNewPassword"
                        android:layout_marginTop="-1dp"
                        android:background="@drawable/border_gray_middle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="@dimen/edt_padding_bottom_12dp"
                        android:paddingTop="@dimen/edt_padding_top_12dp"
                        android:paddingLeft="@dimen/edt_padding_left_10dp"
                        android:paddingRight="@dimen/edt_padding_right_10dp"

                        android:gravity="left"
                        android:hint="New Password"
                        android:inputType="textPassword"
                        android:maxLines="1"
                        android:minLines="1"
                        android:textColor="#000"
                        android:textColorHint="#9C9C9C"
                        android:textSize="16sp" />


                    <com.scoutlabour.custom.NormalEditTextView
                        android:id="@+id/etConfirmNewPassword"
                        android:layout_marginTop="-1dp"
                        android:paddingBottom="@dimen/edt_padding_bottom_12dp"
                        android:paddingTop="@dimen/edt_padding_top_12dp"
                        android:paddingLeft="@dimen/edt_padding_left_10dp"
                        android:paddingRight="@dimen/edt_padding_right_10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_gray_bottom"
                        android:gravity="left"
                        android:hint="Confirm New  Password"
                        android:inputType="textPassword"
                        android:maxLines="1"
                        android:minLines="1"
                        android:textColor="#000"
                        android:textColorHint="#9C9C9C"
                        android:textSize="16sp" />



                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llConfirmPassword"
                    android:clickable="true"
                    android:layout_margin="10dp"
                    android:padding="14dp"
                    android:gravity="center"
                    android:background="#000000"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.scoutlabour.custom.NormalTextView
                        android:textSize="20sp"
                        android:layout_gravity="center"
                        android:background="#000000"
                        android:textColor="#ffffff"
                        android:textAllCaps="false"
                        android:text="Update"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <ImageView
                        android:layout_marginLeft="6dp"
                        android:padding="2dp"
                        android:src="@drawable/arrows"
                        android:layout_width="20dp"
                        android:layout_height="20dp" />

                </LinearLayout>

            </LinearLayout>


        </ScrollView>

    </LinearLayout>
</LinearLayout>
